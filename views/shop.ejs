<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shop</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="">
    <!-- Top Navigation Bar -->
    <nav class="bg-gray-800 p-4">
      <div class="container mx-auto flex justify-between items-center">
        <div class="text-white text-lg font-bold">My Shop</div>
        <ul class="flex space-x-4">
          <li>
            <a href="/shop" class="text-white hover:text-gray-400">Shop</a>
          </li>
          <li>
            <a href="/cart" class="text-white hover:text-gray-400">Cart</a>
          </li>
          <li>
            <a href="/account" class="text-white hover:text-gray-400">My Account</a>
          </li>
          <li>
            <a href="/logout" class="text-white hover:text-gray-400">Logout</a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="flex">
      <!-- Left Navigation Bar -->
      <nav class="w-1/4  p-4 shadow-md">
        <h2 class="text-xl font-bold mb-4">Filters</h2>
        <ul>
          <li class="mb-2">
            <a href="#" class="text-blue-600 hover:text-blue-800"
              >New Collection</a
            >
          </li>
          <li class="mb-2">
            <a href="#" class="text-blue-600 hover:text-blue-800"
              >All Products</a
            >
          </li>
          <li class="mb-2">
            <a href="#" class="text-blue-600 hover:text-blue-800"
              >Discounted Products</a
            >
          </li>
          <li class="mb-2">
            <a href="#" class="text-blue-600 hover:text-blue-800">Filter By</a>
          </li>
          <li class="mb-2">
            <a href="#" class="text-blue-600 hover:text-blue-800"
              >Availability</a
            >
          </li>
          <li class="mb-2">
            <a href="#" class="text-blue-600 hover:text-blue-800">Discount</a>
          </li>
          <li class="mb-2">
            <a href="#" class="text-blue-600 hover:text-blue-800">Sort By</a>
          </li>
          <li class="mb-2">
            <a href="#" class="text-blue-600 hover:text-blue-800">Popular</a>
          </li>
        </ul>
      </nav>
      <!-- Main Content -->
      <div class="w-3/4 p-4">
        <!-- <h1 class="text-2xl font-bold mb-6">Welcome to Shop Page</h1> -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Static Product Cards -->
          <% products.forEach(function(product){ %>
            <div class=" p-4 rounded-lg shadow-md">
              <img
                src="data:image/jpeg;base64,<%= product.image.toString('base64') %> "
                alt="Product 1"
                class="w-full h-48 object-cover rounded-t-lg"
              />
              <div class="p-4 bg-[<%= product.bgcolor %>] rounded-b-lg text-[<%= product.textcolor %>]">
                <h2 class="text-xl font-bold mb-2"><%= product.name %></h2>
                <p class="text-gray-700 mb-2"><%= product.price %></p>
                <p class="text-red-500 mb-2"><%= product.discount %> %</p>
                <p class="text-gray-700 mb-2">Availability: In Stock</p>
                <button
                  class="bg-blue-600 p-2 rounded hover:bg-blue-700"
                > <a href="/add-to-cart/<%= product._id%>">  Add to Cart</a>
                
                </button>
              </div>
            </div>
         <% }) %>

         
          
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
